<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.user %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td>
          <% if policy(restaurant).edit? %>
          <!-- hacemos esto para saber que el Ãºnico que puede editar un @restaurant is the user that created it -->
          <%= link_to 'Edit', edit_restaurant_path(restaurant) %>

          <% end %>

          </td>
        <td>
          <%  if policy(restaurant).destroy? %> <!-- chequeamos que la sea el user que ha creado el restaurante para desplegar el link de 'destroy ' lo mismo con edit -->
          <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

